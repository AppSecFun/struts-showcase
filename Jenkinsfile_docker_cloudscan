pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // only need git url if script isn't under SCM
                // git url: 'https://github.com/gmdavef/struts-showcase', branch: 'main'
                withMaven( maven: 'mvn3' ) {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test') {
            environment {
                RLTOK = credentials('rlApiToken_syn')
            }            
            steps {
                script {
                    sh '''
                    # Note: Docker image is pulled automatically if it doesn't exist
                    echo $WORKSPACE
                    docker run --rm -u \$(id -u):\$(id -g) \
                    -v "$WORKSPACE/target:/packages:ro" \
                    -e RLPORTAL_ACCESS_TOKEN=$RLTOK \
                    reversinglabs/rl-scanner-cloud:latest rl-scan \
                    --rl-portal-server=synopsys \
                    --rl-portal-org=Synopsys \
                    --rl-portal-group=Default \
                    --purl=Apache/Struts2showcase@2.5.28-$BUILD_NUMBER \
                    --diff-with=2.5.28
                    --file-path=/packages/struts2-showcase.war \
                    --timeout=10
                    ''' 
                }
            }
        }
    }
}
